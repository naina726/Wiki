<div class="header">
    <a href="/home"><img class="logo" src="../../img/star.png"/></a>

	<form action='/search' method="POST">
		<input type="text" name="searchBar" placeholder="search">
		<button>&#x2605;</button>
	</form>
	<a class="linkz newPostLink" href='/articles/new'>New post</a>
	<a class="linkz goback" href='/home'>View all posts</a>
	<a class="linkz one" href='/account'>My posts</a>
	<a class="linkz two" href='/logout'>Log out</a>
</div>





<div class='editPostForm'>

	<form action='/articles/{{id}}' method="POST">
		<input type="hidden" name="_method" value="PUT">
		<input type="text" name="title" value="{{title}}"><br>
		<select required name= "cat_id">
		  <option value="">Select a category</option>
		  <option value='1'>home</option>
		  <option value='2'>family</option>
		  <option value='3'>social</option>
		  <option value='4'>school</option>
	 	  <option value='5'>work</option>
		</select>
		<textarea class="bigBox" name="content" style="width: 500px; height: 350px;">{{content}}</textarea>
		<button>Post</button><br>
	</form>

</div>


<form action="/articles/{{id}}" method="POST" style="clear: left; text-align: center;">
	<input type="hidden" name="_method" value="DELETE">
	<button class="delButton">Delete</button>
</form>
